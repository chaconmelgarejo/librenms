version: '1'
services:
  db:
    image: mysql:5.7
    container_name: mysql-bd
    volumes:
      - "./.data/db:/var/lib/mysql"
    restart: always
    ports:
      - "3334:3306"
    environment:
      MYSQL_ROOT_PASSWORD: librenms
      MYSQL_DATABASE: librenms
      MYSQL_USER: librenms
      MYSQL_PASSWORD: librenms

  librenms:
    depends_on:
      - db
    image: jarischaefer/docker-librenms
    container_name: librenms-prod
    hostname: librenms
    volumes:
      -	./.logs:/opt/librenms/logs
      - ./.rrd:/opt/librenms/rrd
    links:
      - db
    ports:
      - "8889:80"
    restart: always
    environment:
	DB_HOST: db
    	DB_NAME: librenms
    	DB_USER: librenms
    	DB_PASS: librenms
    	BASE_URL: http://localhost
    	POLLERS: 16
    	TZ: UTC
